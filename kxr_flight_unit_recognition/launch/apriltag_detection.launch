<launch>
  <arg name="camera_name" value="stereo" />
  <arg name="queue_size" default="30" />
  <arg name="manager" default="/$(arg camera_name)/$(arg camera_name)_nodelet_manager" />

  <group ns="stereo" >
    <group ns="left_camera" >
      <node name="apriltag_ros_continuous_node"
            pkg="nodelet" type="nodelet"
            args="load apriltag_ros/ContinuousDetector $(arg manager)"
            clear_params="true"
            output="screen" >
        <remap from="image_rect" to="image_rect_color" />
        <remap from="camera_info" to="camera_info" />

        <param name="publish_tag_detections_image" type="bool" value="true" />
        <param name="queue_size" type="int" value="$(arg queue_size)" />
        <rosparam command="load" file="$(find kxr_flight_unit_recognition)/config/apriltag/settings.yaml" />
        <rosparam command="load" file="$(find kxr_flight_unit_recognition)/config/apriltag/tags.yaml" />
      </node>
    </group>

    <group ns="right_camera" >
      <node name="apriltag_ros_continuous_node"
            pkg="nodelet" type="nodelet"
            args="load apriltag_ros/ContinuousDetector $(arg manager)"
            clear_params="true"
            output="screen" >
        <remap from="image_rect" to="image_rect_color" />
        <remap from="camera_info" to="camera_info" />
        <param name="publish_tag_detections_image" type="bool" value="true" />
        <param name="queue_size" type="int" value="$(arg queue_size)" />
        <rosparam command="load" file="$(find kxr_flight_unit_recognition)/config/apriltag/settings.yaml" />
        <rosparam command="load" file="$(find kxr_flight_unit_recognition)/config/apriltag/tags.yaml" />
      </node>
    </group>
  </group>

</launch>
